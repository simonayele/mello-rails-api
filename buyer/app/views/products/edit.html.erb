<div class="col-10 offset-1 col-sm-8 offset-sm-2 col-md-6 offset-md-3 card form">
  <h2>Edit Product</h2>
<%= simple_form_for @product do |f| %>
  <%= f.input :name %>
  <%= f.input :price %>
  <%= f.input :description %>
  <%= f.input :picture %>
  <%= f.submit 'Update', class: 'my-btn' %>
  <%= f.submit %>
<% end %>
</div>
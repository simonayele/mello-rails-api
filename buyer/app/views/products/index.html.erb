<div class="col-10 offset-1 col-sm-8 offset-sm-2 col-md-6 offset-md-3">
  <% @products.each do |product| %>
     <p>Name: <%= product.name %>; unit price of <%= number_to_currency(product.price) %></p>
    <p>
      <%= product.description %>
      <%= image_tag product.picture.to_s, class: 'img-fluid' %>
    </p>
    <div class="product-actions float-right">
      <% if current_user && current_user == product.user %>
        <%= link_to "Edit", edit_product_path(product) %> |
        <%= link_to "Delete", product_path(product), method: :delete, data: {confirm: "Are you sure?"} %>
      <% end %>
    </div>
    <div>
        <%= button_to "Add #{product.name} to cart", order_items_path(:product_id => product.id) %>
        1-<%= @product_id.inspect %>
    </div>
    <br/>
    <br/>
    <div>
      <%= link_to 'Details', product_path(product), class: 'btn btn-primary btn-large' %>
    </div>

  <% end %>

</div>

<p><%= link_to "New product", new_product_path %></p>





